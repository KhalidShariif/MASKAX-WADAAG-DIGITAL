<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ShopMaster</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, hsl(220, 20%, 97%) 0%, hsl(220, 70%, 96%) 100%);
        }

        .auth-card {
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
            text-align: center;
        }

        .logo-large {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-main);
            margin-bottom: 0.5rem;
        }
    </style>
</head>

<body>

    <div class="glass-card auth-card fade-in">
        <div class="logo-large">ShopMaster</div>
        <p class="text-muted" style="margin-bottom: 2rem;">Create a new shop account</p>

        <form id="registerForm" onsubmit="handleRegister(event)">
            <div style="margin-bottom: 1.2rem; text-align: left;">
                <label class="text-muted" style="font-size: 0.9rem;">Shop Name</label>
                <input type="text" id="shopName" placeholder="My Awesome Shop" required>
            </div>

            <div style="margin-bottom: 1.2rem; text-align: left;">
                <label class="text-muted" style="font-size: 0.9rem;">Username</label>
                <input type="text" id="username" placeholder="Choose a username" required>
            </div>

            <div style="margin-bottom: 1.5rem; text-align: left;">
                <label class="text-muted" style="font-size: 0.9rem;">Password</label>
                <input type="password" id="password" placeholder="Choose a password" required>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">Register</button>
        </form>

        <div style="margin-top: 1.5rem;">
            <p class="text-muted" style="font-size: 0.9rem;">Already have an account? <a href="login.html"
                    style="color: var(--primary-main); text-decoration: none; font-weight: 500;">Login here</a></p>
        </div>

        <div id="error-msg" class="text-danger" style="margin-top: 1rem; font-size: 0.9rem; display: none;"></div>
    </div>

    <script src="js/auth.js"></script>
    <script>
        async function handleRegister(e) {
            e.preventDefault();
            const shopName = document.getElementById('shopName').value;
            const user = document.getElementById('username').value;
            const pass = document.getElementById('password').value;
            const errorEl = document.getElementById('error-msg');
            const btn = e.target.querySelector('button');

            btn.innerText = 'Creating account...';
            btn.disabled = true;

            // Corrected to pass positional arguments as defined in auth.js
            const result = await auth.register(user, pass, shopName, 'staff');

            if (result.success) {
                alert('Account created successfully! Please login.');
                window.location.href = 'login.html';
            } else {
                btn.innerText = 'Register';
                btn.disabled = false;
                errorEl.textContent = result.message;
                errorEl.style.display = 'block';
            }
        }
    </script>
</body>

</html>